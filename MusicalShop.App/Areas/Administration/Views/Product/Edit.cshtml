@model ProductEditInputModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="cart-table-area section-padding-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-lg-8">
                <div class="checkout_details_area mt-50 clearfix">

                    <div class="cart-title">
                        <h2>Edit Product</h2>
                    </div>

                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <input type="text"
                                       class="form-control"
                                       id="name"
                                       asp-for="Name"
                                       placeholder="Name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <input type="date"
                                       class="form-control"
                                       id="manufactured_on"
                                       asp-for="ManufacturedOn"
                                       placeholder="ManufacturedOn">
                                <span asp-validation-for="ManufacturedOn" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <input type="number"
                                       class="form-control"
                                       id="price"
                                       step="any"
                                       min="0"
                                       asp-for="Price"
                                       placeholder="Price">
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <input type="number"
                                       class="form-control"
                                       id="quantity"
                                       asp-for="Quantity"
                                       placeholder="Quantity">
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <input type="text"
                                       class="form-control"
                                       id="description"
                                       asp-for="Description"
                                       placeholder="Description">
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <input type="file"
                                       class="form-control"
                                       id="picture"
                                       asp-for="Picture"
                                       placeholder="Picture Link">
                                <span asp-validation-for="Picture" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <select class="form-control-plaintext" asp-for="ProductType">
                                    <option disabled selected class="text-info"> -- Select Product Type -- </option>
                                    @foreach (var type in (IEnumerable<ProductTypeViewModel>)ViewData["types"])
                                    {
                                        <option value="@type.Name">@type.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="ProductType" class="text-danger"></span>
                            </div>
                            <div class="cart-btn mt-100">
                                <button type="submit" class="btn amado-btn w-100">Edit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>